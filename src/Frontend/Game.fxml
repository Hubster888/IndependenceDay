<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="borderPane" prefHeight="311.0" prefWidth="402.0" xmlns="http://javafx.com/javafx/8.0.221" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Frontend.GameController">
    <center>
        <Canvas fx:id="canvas" height="500.0" width="500.0" BorderPane.alignment="CENTER" />
    </center>
    <top>
        <AnchorPane prefHeight="30.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <MenuButton mnemonicParsing="false" text="Menu">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Save" />
                        <MenuItem mnemonicParsing="false" text="Load" />
                        <MenuItem mnemonicParsing="false" onAction="#exitToMenu" text="Exit" />
                    </items>
                </MenuButton>
            </children>
        </AnchorPane>
    </top>
</BorderPane>
